    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "public/",
    "sourceMap": true,
    "rootDir": "./ts"
  },
    "include": ["ts/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }